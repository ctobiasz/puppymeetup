<style>
@import url('https://fonts.googleapis.com/css?family=Baloo');




body {
margin: 0;
padding: 0;
background-image: url('assets/forest.jpg');
background-size: 100% 100%;
}

.login-box {
  height: 50vh;
  width: 400px;
  position:absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  padding: 40px;
  background: rgb(126, 126, 126);
  color: white;
  border: 1px solid white;
  text-align: center;
  vertical-align: middle;
}


login-box label {
   text-decoration: underline;
}


 #login-tab {
   width:100%;
   background: white;
 }

 .login-page-header {
   font-family: 'Poppins', sans-serif !important;
   font-weight: bold;
   margin-bottom: 30px;
   border-bottom: 1px solid white;
 }






</style>

<% provide(:title, "Log in") %>
<html>
<body class="login-body">

  <div class="login-container">

      <div class="login-box">

      <h1 class="login-page-header">Log in</h1>

    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :email %><br>
    <%= f.email_field :email, class: "form-control" , id: "input-field-login" %><br>
<br>
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control", id: "input-field-login" %><br>
<p>
    <%=   f.submit "Log in", class: "submit-button" %>
</p>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
</div>
</body>
</html>
