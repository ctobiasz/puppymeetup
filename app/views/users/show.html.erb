
<div class="jumbotron jumbotron-fluid jumbotron-account">
  <div class="container account-container">
    <h1 class="display-4 text-center"><span class="account-jumbotron"> Welcome <%= @user.first_name%> <%= @user.last_name%></span></h1>
    <p class="lead text-center para-puppy"></i>When life gives you puppies, you give puppies the best dates!</p>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <%= image_tag(@user.avatar) if @user.avatar.attached?%>
    <p>First Name: <%= @user.first_name %></p>
    <p>Last Name: <%= @user.last_name %></p>
    <p>Email: <%= @user.email %></p>
    <p>Your Location: <%= @user.location_string %></p>
  </div>

  <div class="col-md-6">
    <% locprofi = Location.create(address: @user.location_string )%>

    <iframe width="300" height="300" frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["GOOGLE_API_KEY"] %>&q=<%= locprofi.latitude %>,<%= locprofi.longitude %>"
    allowfullscreen>
    </iframe>
  </div>
</div>

<div class="col-12">

</div>






<% @user.posts.reverse.each do |post|%>

    <%= image_tag (post.picture) if post.picture.attached? %><br>

    TITLE: <%= post.name %>
    DESCRIPTION: <%= post.description %>
    LOCATION: <%= post.location_string%>

  <% pocprofi = Location.create(address: post.location_string )%>

      <iframe width="300" height="300" frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["GOOGLE_API_KEY"] %>&q=<%= pocprofi.latitude %>,<%= pocprofi.longitude %>"
      allowfullscreen>
      </iframe>

<%= link_to 'Edit Post', edit_post_path(post) %>
<%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
<% end %>



<div class="col-12">
<%= link_to 'Edit Account', edit_user_path %>
<%= link_to "Delete Your Account", @user, method: :delete,
                                    data: { confirm: "YOU CANNOT REVERSE THIS.  Are you sure you want to do this?" } %>
<%= link_to "Find a Pup", new_post_path %>
<%= link_to "Log out", "/logout", method: :delete %>
</div>
